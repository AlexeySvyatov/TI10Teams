<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dota"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/saMT"
        android:background="@drawable/second_activity_txtview_bg"
        android:gravity="center"
        android:textSize="@dimen/saTS"
        android:textColor="@color/black"/>

    <WebView
        android:id="@+id/teamInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headline"
        android:background="@color/saB"
        android:padding="@dimen/saP"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        tools:ignore="WebViewLayout" />


</RelativeLayout>